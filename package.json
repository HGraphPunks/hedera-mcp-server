    "start": "node dist/index.js",
    "dev": "vite",
    "test": "jest",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/hedera-mcp-server.git"
  },
  "keywords": [
    "hedera",
    "mcp",
    "agent",
    "decentralized",
    "HCS-10",
    "HCS-11",
    "AI",
    "blockchain"
  ],
  "author": "Patches",
  "license": "MIT",
  "dependencies": {
